{
    "app-id": "io.liri.Calculator",
    "branch": "@@APP_BRANCH@@",
    "runtime": "io.liri.Platform",
    "runtime-version": "@@LIRI_SDK_VERSION@@",
    "sdk": "io.liri.Sdk",
    "command": "liri-calculator",
    "tags": [ "nightly" ],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=home",
        "--device=dri",
        "--env=SESSION_MANAGER="
    ],
    "build-options": {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g"
    },
    "modules": [
        {
            "name": "calculator",
            "sources": [
                {
                    "type": "git",
                    "url": "git://github.com/lirios/calculator.git",
                    "branch": "@@APP_BRANCH@@"
                },
                {
                    "commands": [
                        "qmake LIRI_INSTALL_PREFIX=/app"
                    ],
                    "dest-filename": "configure",
                    "type": "script"
                }
            ]
        }
    ]
}
