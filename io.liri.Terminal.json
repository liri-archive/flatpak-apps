{
    "id": "io.liri.Terminal",
    "branch": "master",
    "runtime": "io.liri.Platform",
    "runtime-version": "master",
    "sdk": "io.liri.Sdk",
    "cleanup-commands": [
        "rm -f /app/share/appdata/*"
    ],
    "command": "lirios-terminal",
    "tags": [ "nightly" ],
    "desktop-file-name-prefix": "(Nightly) ",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=host"
    ],
    "modules": [
        {
            "cmake": true,
            "config-opts": [
                "-DKDE_INSTALL_LIBDIR=lib"
            ],
            "name": "lirios-terminal",
            "post-install": [],
            "sources": [
                {
                    "type": "git",
                    "url": "git://github.com/lirios/terminal"
                }
            ]
        }
    ]
}
