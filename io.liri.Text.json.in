{
    "app-id": "io.liri.Text",
    "branch": "@@APP_BRANCH@@",
    "runtime": "io.liri.Platform",
    "runtime-version": "@@LIRI_SDK_VERSION@@",
    "sdk": "io.liri.Sdk",
    "command": "liri-text",
    "tags": [ "stable" ],
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=home",
        "--device=dri"
    ],
    "build-options": {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g"
    },
    "modules": [
        {
            "name": "text",
            "sources": [
                {
                    "type": "git",
                    "url": "git://github.com/lirios/text.git",
                    "branch": "@@GIT_TAG@@"
                },
                {
                    "commands": [
                        "qmake LIRI_INSTALL_PREFIX=/app"
                    ],
                    "dest-filename": "configure",
                    "type": "script"
                }
            ]
        }
    ]
}
